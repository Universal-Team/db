	"description": "Point-and-click adventure game engines",
	"long_description": "ScummVM allows you to play classic graphic point-and-click adventure games, text adventure games, and RPGs, as long as you already have the game data files. ScummVM replaces the executable files shipped with the games, which means you can now play your favorite games on all your favorite devices.\n\nWhile ScummVM was originally designed to run LucasArtsâ€™ SCUMM games, over time support has been added for many other games: see the full list [on our wiki](https://wiki.scummvm.org/index.php?title=Category:Supported_Games). Noteworthy titles include Broken Sword, Myst and Blade Runner, although there are countless other hidden gems to explore.",
	"icon": "https://raw.githubusercontent.com/scummvm/scummvm/master/backends/platform/3ds/app/icon.png",
	"image": "https://raw.githubusercontent.com/scummvm/scummvm/master/backends/platform/3ds/app/banner.png",
	"download_page": "f\"https://www.scummvm.org/downloads/\"",
	"eval_downloads": true,
	"downloads": {
		"scummvm-3dsx.zip": {
			"url": "f\"https://downloads.scummvm.org/frs/scummvm/{app['version'][1:]}/scummvm-{app['version'][1:]}-3ds-3dsx.zip\"",
			"size": null
		},
		"scummvm-cia.zip": {
			"url": "f\"https://downloads.scummvm.org/frs/scummvm/{app['version'][1:]}/scummvm-{app['version'][1:]}-3ds-cia.zip\"",
			"size": null
		},
		"scummvm-ds.zip": {
			"url": "f\"https://downloads.scummvm.org/frs/scummvm/{app['version'][1:]}/scummvm-{app['version'][1:]}-ds.zip\"",
			"size": null
		}
	},
	"archive": {
		"scummvm-.*-3ds-3dsx.zip": [
			"scummvm.3dsx"
		],
		"scummvm-.*-3ds-cia.zip": [
			"scummvm.cia"
		],
		"scummvm-.*-ds.zip": [
			"scummvm.nds"
		]
	},
	"scripts": {
		"[nightly] scummvm-3dsx": [
			{
				"type": "downloadFile",
				"file": "https://buildbot.scummvm.org/dailybuilds/master/3ds-master-latest.zip",
				"output": "/scummvm-3ds-nightly.zip"
			},
			{
				"type": "extractFile",
				"file": "/scummvm-3ds-nightly.zip",
				"input": "3ds-master-.{8}/scummvm.3dsx",
				"output": "/3ds/scummvm-nightly.3dsx"
			},
			{
				"type": "deleteFile",
				"file": "/scummvm-3ds-nightly.zip"
			}
		],
		"[nightly] scummvm-cia": [
			{
				"type": "downloadFile",
				"file": "https://buildbot.scummvm.org/dailybuilds/master/3ds-master-latest.zip",
				"output": "/scummvm-3ds-nightly.zip"
			},
			{
				"type": "extractFile",
				"file": "/scummvm-3ds-nightly.zip",
				"input": "3ds-master-.{8}/scummvm.cia",
				"output": "/3ds/scummvm-nightly.cia"
			},
			{
				"type": "installCia",
				"file": "/3ds/scummvm-nightly.cia"
			},
			{
				"type": "deleteFile",
				"file": "/3ds/scummvm-nightly.cia"
			},
			{
				"type": "deleteFile",
				"file": "/assets.zip"
			}
		],
		"[nightly] scummvm-nds": [
			{
				"type": "downloadFile",
				"file": "https://buildbot.scummvm.org/dailybuilds/master/nds-master-latest.zip",
				"output": "/scummvm-nds-nightly.zip"
			},
			{
				"type": "extractFile",
				"file": "/scummvm-nds-nightly.zip",
				"input": "nds-master-.{8}/scummvm.ds",
				"output": "/scummvm-nightly.nds"
			},
			{
				"type": "deleteFile",
				"file": "/scummvm-nds-nightly.zip"
			}
		]
	}
}
